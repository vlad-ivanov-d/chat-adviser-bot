{
  "name": "chat-adviser-bot",
  "description": "Chat Adviser is an open source Telegram bot that helps to moderate chats.",
  "version": "1.13.0",
  "scripts": {
    "build": "eslint . && tsc && node build.mjs",
    "dev": "docker compose -f compose.dev.yml up --force-recreate --remove-orphans --wait -d && prisma migrate dev && nodemon src/index.ts",
    "lint": "eslint --fix .",
    "start": "docker compose up --build --force-recreate --remove-orphans -d",
    "test": "npm run test:env-up && jest --coverage && npm run test:env-down && istanbul-badges-readme --silent",
    "test:ci": "npm run test:env-up && jest --coverage && npm run test:env-down && istanbul-badges-readme --ci --silent",
    "test:env-down": "docker compose --env-file=.env.test -f compose.test.yml down",
    "test:env-up": "docker compose --env-file=.env.test -f compose.test.yml up --force-recreate --remove-orphans --wait -d && dotenv -e .env.test -- prisma migrate deploy",
    "test:watch": "npm run test:env-up && jest --watch"
  },
  "author": "Vlad Ivanov",
  "bugs": {
    "url": "https://github.com/vlad-ivanov-d/chat-adviser-bot/issues"
  },
  "engines": {
    "node": "20.10.0",
    "npm": "10.2.3"
  },
  "homepage": "https://github.com/vlad-ivanov-d/chat-adviser-bot#readme",
  "keywords": [
    "bot",
    "nodejs",
    "telegram"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com:vlad-ivanov-d/chat-adviser-bot.git"
  },
  "volta": {
    "node": "20.10.0",
    "npm": "10.2.3"
  },
  "dependencies": {
    "@prisma/client": "5.8.0",
    "cron": "3.1.6",
    "date-fns": "2.30.0",
    "date-fns-tz": "2.0.0",
    "dotenv": "16.3.1",
    "i18next": "23.7.16",
    "lodash.escaperegexp": "4.1.2",
    "telegraf": "4.15.3"
  },
  "devDependencies": {
    "@types/jest": "29.5.11",
    "@types/lodash.escaperegexp": "4.1.9",
    "@types/node": "20.11.0",
    "@typescript-eslint/eslint-plugin": "6.18.1",
    "@typescript-eslint/parser": "6.18.1",
    "dotenv-cli": "7.3.0",
    "esbuild": "0.19.11",
    "esbuild-copy-static-files": "0.1.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jest": "27.6.3",
    "eslint-plugin-jsdoc": "48.0.2",
    "eslint-plugin-optimize-regex": "1.2.1",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-sonarjs": "0.23.0",
    "eslint-plugin-typescript-sort-keys": "3.1.0",
    "istanbul-badges-readme": "1.8.5",
    "jest": "29.7.0",
    "msw": "2.0.14",
    "nodemon": "3.0.2",
    "prettier": "3.2.2",
    "prisma": "5.8.0",
    "rimraf": "5.0.5",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.3.3"
  }
}
