{
  "name": "chat-adviser-bot",
  "description": "Chat Adviser is an open source Telegram bot that helps to moderate chats.",
  "version": "1.10.0",
  "scripts": {
    "build": "eslint . && tsc -noEmit && node build.mjs",
    "dev": "docker compose --file compose.dev.yml up --build --detach --force-recreate --remove-orphans && prisma migrate dev && nodemon src/index.ts",
    "lint": "eslint --fix .",
    "start": "docker compose --env-file=.env --file dist/compose.yml up --build --detach --force-recreate --remove-orphans",
    "test": "node --experimental-test-coverage --loader ts-node/esm --no-warnings --test"
  },
  "author": "Vlad Ivanov",
  "bugs": {
    "url": "https://github.com/vlad-ivanov-d/chat-adviser-bot/issues"
  },
  "engines": {
    "node": "20.9.0",
    "npm": "10.1.0"
  },
  "homepage": "https://github.com/vlad-ivanov-d/chat-adviser-bot#readme",
  "keywords": [
    "bot",
    "nodejs",
    "telegram"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com:vlad-ivanov-d/chat-adviser-bot.git"
  },
  "volta": {
    "node": "20.9.0",
    "npm": "10.1.0"
  },
  "dependencies": {
    "@prisma/client": "5.5.2",
    "cron": "3.1.6",
    "date-fns": "2.30.0",
    "date-fns-tz": "2.0.0",
    "dotenv": "16.3.1",
    "i18next": "23.6.0",
    "telegraf": "4.15.0"
  },
  "devDependencies": {
    "@types/node": "20.8.10",
    "@typescript-eslint/eslint-plugin": "6.9.1",
    "@typescript-eslint/parser": "6.9.1",
    "esbuild": "0.19.5",
    "esbuild-copy-static-files": "0.1.0",
    "eslint": "8.52.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-jest": "27.6.0",
    "eslint-plugin-jsdoc": "46.8.2",
    "eslint-plugin-optimize-regex": "1.2.1",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-sonarjs": "0.22.0",
    "eslint-plugin-typescript-sort-keys": "3.1.0",
    "msw": "2.0.2",
    "nodemon": "3.0.1",
    "prettier": "3.0.3",
    "prisma": "5.5.2",
    "rimraf": "5.0.5",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.2.2"
  }
}