{
  "name": "chat-adviser-bot",
  "description": "Chat Adviser is an open source Telegram bot that helps to moderate chats.",
  "version": "1.3.1",
  "scripts": {
    "build": "eslint . && tsc -noEmit && node build.mjs",
    "dev": "docker compose --file compose.dev.yml up --build --detach --force-recreate --remove-orphans && prisma migrate dev && nodemon -r tsconfig-paths/register src/index.ts",
    "lint": "eslint --fix .",
    "start": "docker compose --env-file=.env --file dist/compose.yml up --build --detach --force-recreate --remove-orphans"
  },
  "author": "Vlad Ivanov",
  "bugs": {
    "url": "https://github.com/vlad-ivanov-d/chat-adviser-bot/issues"
  },
  "engines": {
    "node": "18.17.1",
    "npm": "9.6.7"
  },
  "homepage": "https://github.com/vlad-ivanov-d/chat-adviser-bot#readme",
  "keywords": [
    "bot",
    "nodejs",
    "telegram"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com:vlad-ivanov-d/chat-adviser-bot.git"
  },
  "volta": {
    "node": "18.17.1",
    "npm": "9.6.7"
  },
  "dependencies": {
    "@prisma/client": "5.2.0",
    "cron": "2.4.1",
    "date-fns": "2.30.0",
    "date-fns-tz": "2.0.0",
    "dotenv": "16.3.1",
    "i18next": "23.4.5",
    "telegraf": "4.12.2"
  },
  "devDependencies": {
    "@sprout2000/esbuild-copy-plugin": "1.1.12",
    "@types/node": "20.5.3",
    "@typescript-eslint/eslint-plugin": "5.61.0",
    "@typescript-eslint/parser": "5.61.0",
    "esbuild": "0.19.2",
    "eslint": "8.47.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-jsdoc": "46.5.0",
    "eslint-plugin-optimize-regex": "1.2.1",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-sonarjs": "0.20.0",
    "eslint-plugin-typescript-sort-keys": "2.3.0",
    "nodemon": "3.0.1",
    "prettier": "3.0.2",
    "prisma": "5.2.0",
    "rimraf": "5.0.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.1.6"
  }
}
